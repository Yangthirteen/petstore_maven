<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="demo" extends="struts-default">
        <action name="demoAction" class="web.DemoAction">
            <result name="success">/WEB-INF/jsp/Demo.jsp</result>
        </action>

        <action name="main" class="web.MainAction">
            <result name="success">/WEB-INF/jsp/catelog/Main.jsp</result>
        </action>

        <action name="viewProduct" class="web.ViewProductAction" method="getProductListByCategory">
            <result name="success">/WEB-INF/jsp/catelog/Product.jsp</result>
            <result name="error">/WEB-INF/jsp/common/Error.jsp</result>
        </action>

        <action name="viewCategory" class="web.ViewCategoryAction" method="getProductListByCategory">
            <result name="error">/WEB-INF/jsp/common/Error.jsp</result>
            <result name="success">/WEB-INF/jsp/catelog/Product.jsp</result>
        </action>
    </package>
</struts>